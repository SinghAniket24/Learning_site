@page
@model Learning_site.Pages.ChatBotModel
@{
    ViewData["Title"] = "AI Learning Assistant";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 d-flex flex-column" style="height: 85vh;">
    
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">🤖 EduBot — AI Learning Assistant</h4>
        </div>

        <!-- Chat Window -->
        <div class="card-body flex-grow-1 overflow-auto chat-background" id="chatBox" style="scroll-behavior: smooth;">
            @if (Model.Messages != null && Model.Messages.Count > 0)
            {
                foreach (var msg in Model.Messages)
                {
                    if (msg.Role == "user")
                    {
                        <div class="d-flex justify-content-end mb-3">
                            <div class="chat-bubble user-bubble shadow-sm">
                                <p class="mb-0">@msg.Text</p>
                            </div>
                        </div>

                        @if (msg == Model.Messages.Last())
                        {
                     
                            <div id="loadingSpinner" class="d-flex justify-content-start mb-3" style="display:none;">
                                <div class="chat-bubble bot-bubble shadow-sm text-center">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex justify-content-start mb-3">
                            <div class="chat-bubble bot-bubble shadow-sm">
                                <p class="mb-0">@Html.Raw(msg.TextFormatted)</p>

                                @if (msg.YouTubeVideos?.Count > 0)
                                {
                                    <div class="mt-3">
                                        <strong>📺 Suggested Videos:</strong>
                                        <div class="row mt-2">
                                            @foreach (var vid in msg.YouTubeVideos)
                                            {
                                                <div class="col-md-4 mb-2">
                                                    <a href="@vid.Url" target="_blank" class="text-decoration-none">
                                                        <div class="card h-100 rounded-3 shadow-sm">
                                                            <img src="@vid.Thumbnail" class="card-img-top" alt="@vid.Title" />
                                                            <div class="card-body p-2">
                                                                <small>@vid.Title</small>
                                                            </div>
                                                        </div>
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                <div class="text-muted text-center mt-5">
                    <h6>💬 Start by asking me a study-related question!</h6>
                </div>
            }
        </div>


        <div class="card-footer bg-white border-top rounded-bottom-4">
            <form method="post" class="d-flex" id="chatForm">
                <input type="text" name="Prompt" class="form-control me-2 rounded-pill px-3" placeholder="Type your question..." required />
                <button type="submit" class="btn btn-success rounded-pill px-4">Send</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var chatBox = document.getElementById("chatBox");
        var spinner = document.getElementById("loadingSpinner");
        var form = document.getElementById("chatForm");

       
        function scrollToBottom() {
            if (chatBox) chatBox.scrollTop = chatBox.scrollHeight;
        }
        scrollToBottom();


        form.addEventListener("submit", function () {
            if (spinner) spinner.style.display = "flex";
            setTimeout(scrollToBottom, 200);
        });
    </script>
}

<style>

    .chat-bubble {
        max-width: 75%;
        padding: 0.8rem 1rem;
        border-radius: 1.5rem;
        word-wrap: break-word;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .user-bubble {
        background-color: #007bff;
        color: white;
        border-bottom-right-radius: 0.4rem;
    }

    .bot-bubble {
        background-color: #f8f9fa;
        color: #212529;
        border-bottom-left-radius: 0.4rem;
    }

    .chat-background {
        background: url('/images/bot-bg.png') center center no-repeat, linear-gradient(180deg, #eef2f7, #ffffff);
        background-size: 200px auto, cover;
    }


    #chatBox::-webkit-scrollbar {
        width: 8px;
    }

    #chatBox::-webkit-scrollbar-thumb {
        background: #007bff;
        border-radius: 4px;
    }

    input:focus {
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
        border-color: #007bff;
    }



    .card-body {
        max-height: 65vh;
    }

    }
</style>
