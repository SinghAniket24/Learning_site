@page
@model Learning_site.Pages.signupModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_Layout"; // <-- ADD THIS LINE
}

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-normal">Create an Account</h1>
                <p>Join us and start your learning journey today.</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success text-center">@Model.SuccessMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
                    }
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                            <label asp-for="Username">Username</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Age" type="number" class="form-control" placeholder="Your age" />
                            <label asp-for="Age">Age</label>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg py-2 mb-3">Sign Up</button>
                    </form>

                    <hr class="my-4">

                    <button type="button" class="btn btn-outline-secondary w-100" onclick="initiateGoogleOAuth('/dashboard')">
                        <i class="bi bi-google me-2"></i> Sign up with Google
                    </button>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">Already a member? <a asp-page="/login" class="text-decoration-none">Log in here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
