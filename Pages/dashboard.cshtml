@page
@model Learning_site.Pages.dashboardModel

<div class="dashboard-container">
    <div class="welcome-section">
        @if (!string.IsNullOrEmpty(Model.UserPictureUrl))
        {
            <img src="@Model.UserPictureUrl" alt="Profile Picture" class="profile-picture" />
        }
        <h1>Hi @Model.UserName, ready to learn today?</h1>
        <button class="start-plan-button">Start a New Plan</button>
    </div>

    <div class="quote-box">
        <p class="quote-text">"@Model.MotivationalQuote"</p>
        <p class="quote-author">- @Model.QuoteAuthor</p>
    </div>

    <div class="recommended-plans-section">
        <h2>Recommended Plans</h2>
        <div class="plans-list">
            @if (Model.RecommendedPlans != null && Model.RecommendedPlans.Any())
            {
                @foreach (var plan in Model.RecommendedPlans)
                {
                    <div class="plan-card">
                        <div class="card-header">
                            <img src="@(plan.DayPlans.FirstOrDefault()?.Videos.FirstOrDefault()?.ThumbnailUrl ?? "/images/default-thumbnail.png")"
                                 alt="@plan.Title" class="plan-thumbnail" />
                            <h4>@plan.Title</h4>
                            <p class="plan-channel">by @plan.Channel</p>
                            <p class="plan-days">Total Days: @plan.TotalDays</p>
                        </div>
                        <form method="get" asp-page="/RecommendedPlanDetails">
                            <input type="hidden" name="planTitle" value="@plan.Title" />
                            <button type="submit" class="continue-button">View Plan</button>
                        </form>
                    </div>
                }
            }
            else
            {
                <p>No recommended plans available.</p>
            }
        </div>
    </div>
</div>

<style>
    .dashboard-container {
        padding: 50px 40px;
        background-color: #f0f2f5;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Welcome Section */
    .welcome-section {
        background: linear-gradient(135deg, #6b73ff, #000dff);
        padding: 60px 40px;
        text-align: center;
        border-radius: 15px;
        margin-bottom: 50px;
        color: #fff;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
    }

    .welcome-section h1 {
        font-size: 2.5em;
        margin: 0;
    }

    .start-plan-button {
        background: #ff7a18;
        color: #fff;
        border: none;
        padding: 14px 28px;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .start-plan-button:hover {
            background: #ff4c4c;
        }

    /* Quote Box */
    .quote-box {
        text-align: center;
        margin-bottom: 50px;
        font-style: italic;
        color: #333;
        font-size: 1.4em;
        background: linear-gradient(90deg, #e0eafc, #cfdef3);
        padding: 25px 20px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }

        .quote-box::before {
            content: "“";
            font-size: 3em;
            position: absolute;
            left: 15px;
            top: 10px;
            color: #007bff;
        }

        .quote-box::after {
            content: "”";
            font-size: 3em;
            position: absolute;
            right: 15px;
            bottom: 10px;
            color: #007bff;
        }

    .quote-text {
        margin: 0 0 10px 0;
    }

    .quote-author {
        font-size: 1.1em;
        color: #555;
        margin: 0;
    }

    /* Recommended Plans */
    .recommended-plans-section h2 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2em;
        color: #333;
    }

    .plans-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 40px;
    }

    /* Plan Cards */
    .plan-card {
        background: #fff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        display: flex;
        flex-direction: column;
        transition: transform 0.4s, box-shadow 0.4s;
    }

        .plan-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 35px rgba(0,0,0,0.25);
        }

    .card-header {
        position: relative;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .plan-thumbnail {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
        transition: transform 0.3s;
    }

    .plan-card:hover .plan-thumbnail {
        transform: scale(1.05);
    }

    .card-header h4 {
        margin: 15px 0 5px;
        font-size: 1.5em;
        color: #111;
    }

    .plan-channel, .plan-days {
        font-size: 1em;
        color: #666;
        margin: 2px 0;
    }

    .continue-button {
        margin: 15px;
        background: #007bff;
        border: none;
        color: #fff;
        padding: 12px 22px;
        border-radius: 10px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.3s;
    }

        .continue-button:hover {
            background: #0056b3;
        }

    /* Responsive */
   

    .quote-box {
        font-size: 1.2em;
        padding: 20px 15px;
    }

    .plan-thumbnail {
        height: 200px;
    }

    }
</style>
