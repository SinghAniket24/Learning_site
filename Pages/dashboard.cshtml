@page
@model Learning_site.Pages.dashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">Hi @Model.UserName, ready to learn today?</h1>
        </div>
    </div>

    <div class="row">
        <!-- Main Content Column -->
        <div class="col-lg-8">
            <!-- Today's Learning Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h4 class="my-0 fw-normal"><i class="bi bi-calendar-check me-2"></i> Today's Learning</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Video Title 1 - [15:32]
                            <a href="#" class="btn btn-sm btn-outline-primary">Watch</a>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Video Title 2 - [10:05]
                            <span class="badge bg-success">Completed</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Video Title 3 - [22:10]
                            <a href="#" class="btn btn-sm btn-outline-primary">Watch</a>
                        </li>
                    </ul>
                    <a asp-page="/videoplayer" class="btn btn-primary mt-3 w-100">Go to Video Player</a>
                </div>
            </div>

            <!-- My Plans Section -->
            <h2 class="h4 mb-3">My Plans</h2>
            @if (Model.CurrentPlans != null && Model.CurrentPlans.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var plan in Model.CurrentPlans)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-body">
                                    <h5 class="card-title">@plan.Title</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">@plan.WatchedVideos of @plan.TotalVideos videos watched</h6>
                                    <div class="progress mb-2">
                                        <div class="progress-bar" role="progressbar" style="width: @plan.Progress%" aria-valuenow="@plan.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <a asp-page="/MyPlans" class="btn btn-outline-primary">View Plan</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center p-5 border rounded-3 bg-light">
                    <i class="bi bi-journal-x display-4 text-muted"></i>
                    <h4 class="mt-3">You don't have any active plans.</h4>
                    <p>Create a structured plan from YouTube videos to start your learning journey.</p>
                    <a asp-page="/managements/Create" class="btn btn-primary btn-lg"> <i class="bi bi-plus-circle-fill me-1"></i> Create Your First Plan</a>
                </div>
            }
        </div>

        <!-- Sidebar Column -->
        <div class="col-lg-4">
            <!-- Overall Progress -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Overall Progress</h5>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-warning text-dark" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                    </div>
                </div>
            </div>

            <!-- Quote of the Day -->
            <div class="card shadow-sm bg-light">
                <div class="card-body text-center">
                    <h5 class="card-title">Quote of the Day</h5>
                    <blockquote class="blockquote mb-0">
                        <p>"@Model.MotivationalQuote"</p>
                        <footer class="blockquote-footer">@Model.QuoteAuthor</footer>
                    </blockquote>
                </div>
            </div>
        </div>
    </div>
</div>
