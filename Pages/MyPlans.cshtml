@page
@model Learning_site.Pages.MyPlansModel
@{
    ViewData["Title"] = "My Plans";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">My Plans</h1>
    <a asp-page="/managements/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle-fill me-1"></i> Create New Plan
    </a>
</div>

@if (Model.Plans != null && Model.Plans.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var plan in Model.Plans)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@plan.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@plan.ChannelAvatarUrl</h6>
                        <p class="card-text small">@plan.TotalLessons lessons in this plan.</p>
                        
                        <div class="mt-auto">
                            <div class="progress mb-2" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @((plan.CompletedLessons * 100) / plan.TotalLessons)%" aria-valuenow="@((plan.CompletedLessons * 100) / plan.TotalLessons)" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <p class="small mb-2">@plan.CompletedLessons of @plan.TotalLessons lessons completed</p>
                            
                            <div class="d-flex justify-content-between">
                                <a asp-page="/Plans/Details" asp-route-id="@plan.Id" class="btn btn-sm btn-primary">View Plan</a>
                                <div>
                                    <a asp-page="/Plans/Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-pencil"></i></a>
                                    <a asp-page="/Plans/Delete" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center p-5 border rounded-3 bg-light mt-4">
        <i class="bi bi-journal-x display-4 text-muted"></i>
        <h4 class="mt-3">You don't have any learning plans yet.</h4>
        <p>Create a structured plan from YouTube videos to start your learning journey.</p>
        <a asp-page="/managements/Create" class="btn btn-primary btn-lg mt-2">
            <i class="bi bi-plus-circle-fill me-1"></i> Create Your First Plan
        </a>
    </div>
}