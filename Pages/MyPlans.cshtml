@page
@model Learning_site.Pages.MyPlansModel

@{
    ViewData["Title"] = "My Plans";
}

<!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">📚 My Learning Plans</h2>
            <p class="text-muted">Track your progress and keep learning 🚀</p>
        </div>
        <a asp-page="/CreatePlan" class="btn btn-primary shadow-sm">
            ✨ New Plan
        </a>
    </div>

    @if (Model.Plans == null || !Model.Plans.Any())
    {
       <!-- Empty state -->
        <div class="text-center p-5 bg-light rounded-3 shadow-sm">
            <h4 class="fw-bold">No plans yet</h4>
            <p class="text-muted">Start your first plan and track your progress.</p>
            <a asp-page="/CreatePlan" class="btn btn-success mt-2">🚀 Create Your First Plan</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var plan in Model.Plans)
            {
                var percentage = (plan.TotalLessons > 0)
                    ? (plan.CompletedLessons * 100) / plan.TotalLessons
                    : 0;
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100 plan-card"
                         onclick="location.href='@Url.Page("weeklyplans", new { id = plan.Id })'">
                        <img src="@plan.IconUrl"
                             class="card-img-top p-3 rounded-circle mx-auto mt-3"
                             alt="Plan Icon"
                             style="height:100px;width:100px;object-fit:contain;">

                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title mb-2">@plan.Name</h5>

                            <p class="mb-1 text-muted small">
                                Progress:
                                <span id="completed-@plan.Id">@plan.CompletedLessons</span> /
                                <span id="total-@plan.Id">@plan.TotalLessons</span> lessons
                            </p>

                            <!--
                                      <p class="mb-1">
                                @*@plan.CompletedLessons / @plan.TotalLessons lessons*@
                            </p>

                            -->

                            <div class="progress mb-2 style="height: 10px">
                                <div id="progressBar-@plan.Id"
                                     class="progress-bar bg-success"
                                     role="progressbar"
                                     style="width:@percentage%">
                                     <!--style="width:(((plan.CompletedLessons * 100) / plan.TotalLessons))%">-->
                                </div>
                            </div>

                            <!-- Motivational Tagline -->
                            <p class="fw-semibold @(percentage == 100 ? "text-success" : "text-primary")">
                                @(percentage == 100 ? "🎉 Completed!" : "🔥 Keep going!")
                            </p>

                            <div class="d-flex justify-content-center gap-2 mt-auto">
                                <a asp-page="/Plans/Edit"
                                   asp-route-id="@plan.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    Edit
                                </a>

                                <a href="javascript:void(0);"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="resetPlan('@plan.Id')">
                                    Reset
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        function refreshProgress() {
            @foreach (var plan in Model.Plans)
            {
                        <text>
                            var progress = window.PlanStorage.getPlanProgress('@plan.Id', @plan.TotalLessons);
                            document.getElementById("completed-@plan.Id").innerText = progress.completed;
                            document.getElementById("progressBar-@plan.Id").style.width = (progress.completed * 100 / progress.total) + "%";
                        </text>
            }
        }

        // Initial refresh
        refreshProgress();

        // Refresh if video completed in another page
        window.addEventListener("storage", function (e) {
            if (e.key && e.key.startsWith("updateProgress-")) refreshProgress();
        });
    });

    function resetPlan(planId) {
        if (confirm("Are you sure you want to reset this plan?")) {
            window.PlanStorage.resetPlan(planId); // Clear local progress
            location.reload(); // Reload page to show updated progress
        }
    }
</script>

<style>
    .plan-card {
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        border-radius: 12px;
    }
    .plan-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }
</style>
