@page
@model Learning_site.Pages.MyPlansModel
@{
    ViewData["Title"] = "My Plans";

}

<div class="container mt-5">
    <h2 class="mb-4">📚 My Plans</h2>

    <div class="row">
        @foreach (var plan in Model.Plans)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 plan-card"
                    onclick="location.href='@Url.Page("/Plans/Details", new { id = plan.Id })'">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex align-items-center mb-3">
                            <img src="@plan.ChannelAvatarUrl" class="rounded-circle me-3" width="50" height="50" />
                            <h5 class="card-title mb-0">@plan.Name</h5>
                        </div>

                        <p class="mb-1">Progress: @plan.CompletedLessons / @plan.TotalLessons lessons</p>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success"
                                style="width:@((plan.CompletedLessons * 100) / plan.TotalLessons)%">
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="/Plans/Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-primary">Edit
                                Plan</a>
                            <a asp-page="/Plans/Reset" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-danger">Reset
                                Plan</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>