@page
@model Learning_site.Pages.MyPlansModel
@{
    ViewData["Title"] = "My Plans";
}

<div class="container mt-5">
    <h2 class="mb-4">📚 My Plans</h2>

    @if (Model.Plans == null || !Model.Plans.Any())
    {
        <div class="alert alert-info">No plans saved yet. <a asp-page="/CreatePlan">Create one now!</a></div>
    }
    else
    {
        <div class="row">
            @foreach (var plan in Model.Plans)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100 plan-card"
                         onclick="location.href='@Url.Page("weeklyplans", new { id = plan.Id })'">
                        <img src="@plan.IconUrl" class="card-img-top p-3" alt="Plan Icon" style="height:120px;object-fit:contain;">

                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title mb-2">@plan.Name</h5>
                            <p class="mb-1">Progress: @plan.CompletedLessons / @plan.TotalLessons lessons</p>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-success"
                                     style="width:@((plan.CompletedLessons * 100) / plan.TotalLessons)%">
                                </div>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a asp-page="/Plans/Edit" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-page="/Plans/Reset" asp-route-id="@plan.Id" class="btn btn-sm btn-outline-danger">Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
