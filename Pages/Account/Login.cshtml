@page
@model Learning_site.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edu Stream - Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #4f46e5, #3b82f6, #06b6d4);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-box {
            background-color: white;
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.25);
        }

            .login-box img {
                width: 80px;
                margin-bottom: 15px;
            }

            .login-box h1 {
                font-size: 28px;
                font-weight: 700;
                margin-bottom: 10px;
                color: #1e3a8a;
            }

            .login-box p {
                color: #555;
                margin-bottom: 30px;
            }

        .btn-login {
            background: linear-gradient(90deg, #2563eb, #06b6d4);
            border: none;
            color: white;
            padding: 12px 20px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 12px;
            width: 100%;
        }

            .btn-login:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
            }
        {
            .login-box

        {
            padding: 30px 20px;
            width: 90%;
        }

        }
    </style>
</head>
<body>
    <div class="login-box">
        <img src="/img/logo.jpeg" alt="Edu Stream Logo" />
        <h1>Edu Stream</h1>
        <p>Welcome back! Please log in to continue.</p>
        <form method="post">
            <button type="submit" class="btn-login">Login with Auth0</button>
        </form>
    </div>
</body>
</html>
