@page
@model Learning_site.Pages.managements.CreateModel
@{
    ViewData["Title"] = "Create Plan";
}

<h1>Create Plan</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="management.Title" class="control-label"></label>
                <input asp-for="management.Title" class="form-control" />
                <span asp-validation-for="management.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="management.Channel" class="control-label"></label>
                <input asp-for="management.Channel" class="form-control" />
                <span asp-validation-for="management.Channel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="management.Description" class="control-label"></label>
                <input asp-for="management.Description" class="form-control" />
                <span asp-validation-for="management.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="management.DailyTime" class="control-label"></label>
                <input asp-for="management.DailyTime" class="form-control" />
                <span asp-validation-for="management.DailyTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="management.Days" class="control-label"></label>
                <input asp-for="management.Days" class="form-control" />
                <span asp-validation-for="management.Days" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create Plan" class="btn btn-primary" />
            </div>

            <div>Hello</div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="/SavePlan">Go to Save Plan</a> |
    <a asp-page="/MyPlans">Back to My Plans</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
