@page
@model LandingModel
@{
    Layout = null; // Disable main layout to avoid sidebar and header on the landing page
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Welcome - Learning_site</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Body and background */
        body {
            background: linear-gradient(135deg, #60b8fd 0%, #2566af 100%);
            margin: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #163573;
            padding: 20px;
        }
        /* Main content container */
        .landing-container {
            background: #d9e8fc;
            border-radius: 18px;
            padding: 48px 48px 64px 48px;
            max-width: 720px;
            width: 100%;
            box-sizing: border-box;
            text-align: center;
            box-shadow: 0 12px 40px rgba(39, 120, 187, 0.25);
        }
        /* Title */
        .landing-title {
            font-weight: 700;
            font-size: 3em;
            margin: 30px 0 24px 0;
            line-height: 1.1;
        }
        /* Description */
        .landing-desc {
            font-size: 1.25em;
            margin-bottom: 48px;
            color: #3a5d9e;
            max-width: 460px;
            margin-left: auto;
            margin-right: auto;
        }
        /* Visit button */
        .btn-visit {
            background-color: #2778bb;
            border: none;
            color: white;
            padding: 16px 60px;
            font-size: 1.3em;
            font-weight: 600;
            border-radius: 32px;
            cursor: pointer;
            box-shadow: 0 10px 30px rgba(39, 120, 187, 0.4);
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn-visit:hover {
                background-color: #40a8ff;
                color: white;
                box-shadow: 0 12px 35px rgba(64, 168, 255, 0.7);
            }
        /* Hero images container */
        .hero-images {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 30px;
        }
            /* Hero images styling */
            .hero-images img {
                height: 140px;
                filter: drop-shadow(0 2px 12px #6cc5fa);
                border-radius: 12px;
                transition: transform 0.3s ease;
            }

                .hero-images img:hover {
                    transform: translateY(-10px) scale(1.05);
                    filter: drop-shadow(0 8px 25px #5599dd);
                }
        /* Responsive adjustments */
        @@media (max-width: 600px) {
            .landing-title

        {
            font-size: 2.2em;
        }

        .landing-desc {
            font-size: 1.1em;
            max-width: 90%;
        }

        .hero-images {
            flex-direction: column;
            gap: 20px;
        }

            .hero-images img {
                height: 120px;
            }

        }
    </style>
</head>
<body>
    <div class="landing-container">
        <div class="hero-images">
            <img src="~/images/hero-education.png" alt="Education 3D Art" />
            <img src="~/images/device-3d.png" alt="Device 3D Art" />
        </div>
        <h1 class="landing-title">Digital Education Platform</h1>
        <p class="landing-desc">
            A smart, beautiful way to learn and grow! Interactive plans, progress tracking, and more.
        </p>
        <a href="/Dashboard" class="btn-visit">Visit Our Website</a>
    </div>
</body>
</html>
