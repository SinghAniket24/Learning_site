@page
@model CreatePlanModel
@{
    ViewData["Title"] = "Create Plan";
}

<div class="create-plan-page min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="col-md-8 col-lg-6">

        <!-- Card Container -->
        <div class="form-card p-4 p-md-5 rounded-4 shadow-sm">

            <!-- Header with Banner Image -->
            <div class="text-center mb-4">
                <img src="~/img/study_plan.jpg" alt="Study Plan"
                     style="width: 220px; height: 220px; object-fit: cover; border-radius: 20px;
                            box-shadow: 0 12px 25px rgba(0,0,0,0.15), 0 6px 12px rgba(0,176,255,0.2);
                            border: 5px solid rgba(255,255,255,0.85); transition: transform 0.3s ease, box-shadow 0.3s ease;"
                     onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 16px 35px rgba(0,0,0,0.2), 0 8px 18px rgba(0,176,255,0.25)';"
                     onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 12px 25px rgba(0,0,0,0.15), 0 6px 12px rgba(0,176,255,0.2)';"
                     class="mb-3" />
                <h1 class="h3 fw-bold mb-1">Create New Learning Plan</h1>
                <p class="text-muted mb-0">Set your learning goals and daily schedule</p>
                <div class="mx-auto mt-2" style="width:50px; height:4px; background: linear-gradient(90deg,#0072ff,#00c6ff); border-radius:3px;"></div>
            </div>

            <!-- Form -->
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Plan.Title" class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                    <input asp-for="Plan.Title" class="form-control form-control-lg rounded-pill" placeholder="Enter plan title (e.g., Learn Flutter)" />
                    <span asp-validation-for="Plan.Title" class="text-danger small"></span>
                </div>

                <!-- YouTube Channel -->
                <div class="mb-3">
                    <label asp-for="Plan.Channel" class="form-label fw-semibold">YouTube Channel</label>
                    <input asp-for="Plan.Channel" class="form-control form-control-lg rounded-pill" placeholder="Enter YouTube channel link or name" />
                    <span asp-validation-for="Plan.Channel" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Plan.Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Plan.Description" class="form-control rounded-3" rows="3" placeholder="Brief description of your learning plan"></textarea>
                    <span asp-validation-for="Plan.Description" class="text-danger small"></span>
                </div>

                <div class="row gx-2">
                    <!-- Daily Time (as number) -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Plan.DailyTime" class="form-label fw-semibold">Daily Time (hours) <span class="text-danger">*</span></label>
                        <input asp-for="Plan.DailyTime" type="number" min="0" step="0.25" class="form-control rounded-pill" placeholder="e.g., 1.5" />
                        <span asp-validation-for="Plan.DailyTime" class="text-danger small"></span>
                    </div>

                    <!-- Days -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Plan.Days" class="form-label fw-semibold">Days <span class="text-danger">*</span></label>
                        <input asp-for="Plan.Days" type="number" min="1" class="form-control rounded-pill" placeholder="e.g., 30" />
                        <span asp-validation-for="Plan.Days" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-gradient btn-lg rounded-pill fw-bold">
                        🚀 Create Plan
                    </button>
                </div>
            </form>

            <div class="mt-3 text-center">
                <a asp-page="/Index" class="text-decoration-none">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Page Background */
    .create-plan-page {
        background: linear-gradient(180deg, #f5f9ff 0%, #f0fbff 40%);
    }

    /* Card Styling */
    .form-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(14,30,37,0.08);
        padding: 2rem;
    }

    /* Input Fields */
    .form-control-lg {
        padding: .75rem 1rem;
        font-size: 0.95rem;
    }

    .form-control:focus {
        border-color: #00b0ff;
        box-shadow: 0 6px 18px rgba(0,176,255,0.12);
        outline: none;
    }

    /* Gradient Submit Button */
    .btn-gradient {
        background: linear-gradient(90deg, #0072ff 0%, #00c6ff 100%);
        color: #fff;
        border: none;
        box-shadow: 0 8px 20px rgba(0,114,255,0.12);
        transition: transform .18s ease, box-shadow .18s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 14px 30px rgba(0,114,255,0.16);
        }

    /* Small helper text */
    .small {
        font-size: .85rem;
    }
</style>
