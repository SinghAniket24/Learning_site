@page
@model Learning_site.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout"; // Ensure we are using the main layout
}

<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <h1 class="h3 mb-3 fw-normal">Learning Site</h1>
                <p>Welcome back! Please sign in to continue.</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
                    }
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg py-2 mb-3">Log in</button>
                    </form>

                    <hr class="my-4">

                    <button type="button" class="btn btn-outline-secondary w-100" onclick="initiateGoogleOAuth('/dashboard')">
                        <i class="bi bi-google me-2"></i> Log in with Google
                    </button>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted">Don't have an account? <a asp-page="/signup" class="text-decoration-none">Sign up here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
