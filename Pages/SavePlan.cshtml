@page
@model SavePlanModel
@{
    ViewData["Title"] = "Save Plan";
}

<div class="container mt-4">
    <h2 class="mb-3">Preview Plan</h2>
    <div class="mb-3">
        <p><strong>Topic:</strong> @Model.PlanInfo.Title</p>
        <p><strong>Channel:</strong> @Model.PlanInfo.Channel</p>
        <p><strong>Daily Hours:</strong> @Model.PlanInfo.DailyTime</p>
        <p><strong>Days:</strong> @Model.PlanInfo.Days</p>
    </div>

    <h3 class="mt-4">Daily Breakdown</h3>
    @if (Model.DailyPlan != null && Model.DailyPlan.Any())
    {
        @foreach (var day in Model.DailyPlan)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Day @day.Day</h5>
                </div>
                <div class="card-body row">
                    @foreach (var video in day.Videos)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-0 shadow-sm">
                                <img class="card-img-top rounded" src="@video.ThumbnailUrl" alt="Thumbnail">
                                <div class="card-body">
                                    <h5 class="card-title">@video.Title</h5>
                                    <p class="card-text mb-1"><strong>Duration:</strong> @video.Duration</p>
                                    <p class="card-text"><strong>Channel:</strong> @video.ChannelName</p>
                                    
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">No videos found for this plan.</div>
    }

    <form method="post" class="mt-3">
        <button type="submit" class="btn btn-success btn-lg">Save Plan</button>
        <a asp-page="/CreatePlan" class="btn btn-secondary btn-lg">Cancel</a>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
</div>
