@page
@model Learning_site.Pages.weeklyplansModel
@{
    ViewData["Title"] = "Weekly Plan";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">Weekly Plan</h1>
</div>

@if (Model.WeeklyPlan != null && Model.WeeklyPlan.Any())
{
    <div class="card shadow-sm">
        <div class="card-body">
            @foreach (var day in Model.WeeklyPlan)
            {
                <h4 class="mb-3">@day.Key</h4>
                <div class="list-group mb-4">
                    @foreach (var task in day.Value)
                    {
                        <a href="https://www.youtube.com/watch?v=@task.VideoId" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-play-circle-fill me-2"></i>
                                <span>@task.Title</span>
                                <small class="text-muted d-block mt-1">Scheduled for: @task.ScheduledTime</small>
                            </div>
                            @if(task.IsCompleted)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle-fill me-1"></i> Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-light text-dark">Pending</span>
                            }
                        </a>
                    }
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="text-center p-5 border rounded-3 bg-light mt-4">
        <i class="bi bi-calendar-week display-4 text-muted"></i>
        <h4 class="mt-3">Your weekly plan is empty.</h4>
        <p>Create a learning plan to see your weekly schedule here.</p>
        <a asp-page="/managements/Create" class="btn btn-primary btn-lg mt-2">
            <i class="bi bi-plus-circle-fill me-1"></i> Create a Plan
        </a>
    </div>
}