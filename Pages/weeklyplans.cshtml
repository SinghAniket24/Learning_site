@page
@model Learning_site.Pages.WeeklyPlansModel
@{
    ViewData["Title"] = "Weekly Plan";
}

<h2 class="mb-4">📅 Weekly Study Plan</h2>

@foreach (var day in Model.WeeklyPlan)
{
    <div class="mb-4">
        <h4>@day.Key</h4>
        <div class="list-group">
            @foreach (var task in day.Value)
            {
                <div class="list-group-item d-flex align-items-center">
                    <img src="@task.ThumbnailUrl" class="me-3 rounded" width="100" height="60" />

                    <div class="flex-fill">
                        <h6 class="mb-1">@task.Title</h6>
                        <small class="text-muted">@task.ScheduledTime</small>
                    </div>

                    <div>
                        @if (task.IsCompleted)
                        {
                            <span class="badge bg-success">Done</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
}
