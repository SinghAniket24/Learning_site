<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learning_site</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learning_site.styles.css" asp-append-version="true" />

    <style>
        /* --- Navbar Styling --- */
        .navbar {
            padding: 1rem 2rem;
            background: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
            border-radius: 0 0 15px 15px;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
            cursor: default;
        }

        .navbar-nav .nav-link {
            margin-right: 1rem;
            font-weight: 500;
            color: #343a40;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #0d6efd;
                transform: translateY(-2px);
            }

        .btn-outline-danger {
            border-width: 2px;
            font-weight: 500;
        }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: #fff;
            }

        /* --- Main Content Styling --- */
        main {
            padding-top: 2rem;
            padding-bottom: 5rem;
            min-height: 70vh;
            background: #f8f9fa;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 2rem;
        }

        /* --- Footer Styling --- */
        footer {
            background-color: #343a40;
            color: #fff;
            padding: 1rem 0;
            position: relative;
            bottom: 0;
            width: 100%;
            text-align: center;
            margin-top: 2rem;
            border-radius: 15px 15px 0 0;
        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <!-- Brand (Not Clickable) -->
                <span class="navbar-brand fw-bold text-primary">
                    <i class="bi bi-mortarboard"></i> Learning_site
                </span>

                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/MyPlans">My Plans</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/CreatePlan">Create Plan</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Settings">Settings</a>
                        </li>
                        <!-- EduBot Nav Item -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ChatBot">EduBot</a>
                        </li>
                    </ul>

                    <!-- Logout Button on Right -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="btn btn-outline-danger btn-sm" asp-area="" asp-page="/AuthPage">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Page Content -->
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2025 - Learning_site
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/planStorage.js"></script>

</body>

</html>
