<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learning_site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learning_site.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Splash Screen Styles */
        #splash-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.8s ease-out, visibility 0.8s;
        }

            #splash-screen.fade-out {
                opacity: 0;
                visibility: hidden;
            }

            #splash-screen img {
                width: 100px;
                margin-bottom: 20px;
                animation: bounce 2s infinite;
            }

            #splash-screen h1 {
                font-size: 1.8rem;
                font-weight: bold;
                color: white;
                margin-bottom: 10px;
            }

        .loader {
            border: 6px solid rgba(255, 255, 255, 0.3);
            border-top: 6px solid #fff;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-15px);
            }
        }

        /* Sidebar */
        .sidebar {
            min-height: 100vh;
            background: #f8f9fa;
            border-right: 1px solid #ddd;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #333;
                font-weight: 500;
                margin-bottom: 10px;
            }

                .sidebar .nav-link:hover {
                    background: #e9ecef;
                    border-radius: 5px;
                }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Splash Screen -->
    <div id="splash-screen">
        <img src="~/images/logo.png" alt="Logo" />
        <h1>Welcome to EduNova!</h1>
        <div class="loader"></div>
    </div>

    <!-- Main Website Content -->
    <div id="main-content" style="display:none;" class="d-flex flex-column flex-grow-1">

        <header class="navbar navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="bi bi-mortarboard"></i> Learning_site
                </a>
                <a class="btn btn-outline-danger btn-sm" asp-area="" asp-page="/AuthPage">Logout</a>
            </div>
        </header>

        <div class="container-fluid flex-grow-1">
            <div class="row flex-nowrap">
                <!-- Sidebar -->
                <div class="col-auto col-md-3 col-lg-2 sidebar">
                    <nav class="nav flex-column">
                        <a class="nav-link" asp-area="" asp-page="/Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                        <a class="nav-link" asp-area="" asp-page="/MyPlans"><i class="bi bi-journal-bookmark"></i> My Plans</a>
                        <a class="nav-link" asp-area="" asp-page="/CreatePlan"><i class="bi bi-plus-square"></i> Create Plan</a>
                        <a class="nav-link" asp-area="" asp-page="/Settings"><i class="bi bi-gear"></i> Settings</a>
                    </nav>
                </div>

                <!-- Page Content -->
                <main role="main" class="col px-4 py-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <footer class="border-top footer text-muted mt-auto">
            <div class="container text-center">
                &copy; 2025 - Learning_site
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/planStorage.js"></script>

    <script>
        window.addEventListener("load", function () {
            if (!sessionStorage.getItem("splashShown")) {
                setTimeout(function () {
                    document.getElementById("splash-screen").classList.add("fade-out");
                    setTimeout(function () {
                        document.getElementById("splash-screen").style.display = "none";
                        document.getElementById("main-content").style.display = "block";
                        sessionStorage.setItem("splashShown", "true");
                    }, 800);
                }, 2500);
            } else {
                document.getElementById("splash-screen").style.display = "none";
                document.getElementById("main-content").style.display = "block";
            }
        });
    </script>
</body>
</html>
