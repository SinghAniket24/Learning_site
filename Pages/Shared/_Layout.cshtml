@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication.OpenIdConnect
@using System.Security.Claims
@using Learning_site.Services

@inject SupabaseService SupabaseService

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* --- Navbar Styling --- */
        .navbar {
            padding: 1rem 2rem;
            background: #007bff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .navbar .navbar-nav .nav-link {
                font-size: 1.2rem; /* bigger links */
                font-weight: 600;
                color: #fff;
                margin-right: 1.5rem;
                transition: all 0.3s ease;
                letter-spacing: 0.5px;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #ffc107;
                    transform: translateY(-1px);
                }

        .navbar-toggler {
            border-color: #fff;
        }

        .btn-outline-danger,
        .btn-outline-light {
            border-width: 2px;
            font-weight: 500;
            color: #fff;
            padding: 0.45rem 1rem;
            font-size: 1rem;
        }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: #fff;
            }

            .btn-outline-light:hover {
                background-color: #ffc107;
                color: #000;
            }

        /* --- Main Content Styling --- */
        main {
            padding: 3rem 2rem;
            min-height: 75vh;
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.06);
            margin: 2rem auto;
            max-width: 1400px;
        }

        body {
            background-color: #f1f3f6;
        }

        /* --- Footer --- */
        footer {
            background-color: #343a40;
            color: #fff;
            padding: 0.8rem 0;
            text-align: center;
            margin-top: 2rem;
            border-radius: 12px 12px 0 0;
            font-size: 0.95rem;
        }


        main {
            padding: 2rem 1.2rem;
        }

        }



        main {
            padding: 1.5rem 1rem;
        }

        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <!-- Navbar Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Dashboard">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/MyPlans">My Plans</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/CreatePlan">Create Plan</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/ChatBot">EduBot</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Quiz">Quiz</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-page="/Settings">Settings</a></li>
                    </ul>

                    <!-- Login / Logout Buttons -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-3">
                                <span class="nav-link text-white fs-5">Hello, @User.Identity?.Name 👋</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Load User Plans if Authenticated -->
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
        if (!string.IsNullOrEmpty(userId) && Learning_site.Services.SavedPlansStore.SavedPlans.Count == 0)
        {
            await Learning_site.Services.SavedPlansStore.LoadUserPlansAsync(SupabaseService, userId);
        }
    }

    <!-- Main Page Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        &copy; 2025 - Dashboard
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/theme.js"></script>

    <script src="~/js/planStorage.js"></script>
</body>
</html>
